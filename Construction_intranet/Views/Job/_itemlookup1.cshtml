

@model Construction_intranet.Models.JobModel
@{
    ViewBag.Title = "Details";

}

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-6">
               <h5 class="subtitle mb10"><label class="btn btn-danger">Total:@Model.FullTotal</label></h5>



            </div><!-- col-sm-6 -->

            <div class="col-sm-6 text-right">

                <h5 class="subtitle mb10"><label class="label label-info">Progress</label></h5>
                <address>
                    <div class="progress progress-striped">
                        <div class="progress-bar" style="width: @Model.Percentage%;">
                            <span class="sr-only">@Model.Percentage.Value % Complete</span>
                        </div>
                    </div>
                   </address>


            </div>
        </div><!-- row -->
  
            <div class="well">
                @if (Model.dailyentry != null)
{

                    <table class="table table-invoice">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Description</th>

                                <th>Location</th>
                                <th>Type</th>
                                <th>Quantity</th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.dailyentry)
{

                                <tr>
                                    <td>
                                        <div class="text-primary"><strong>@item.added_date.ToLongDateString()</strong></div>
                                    </td>
                                    <td>@item.Description</td>


                                    <td>@item.Location</td>

                                    <td>@if(item.entrytype==null)
                                    { <strong>Entry</strong>}
                                    else
                                    {
                                        <strong>Adjustment (@item.Quantity)</strong>
                                    }
                                    </td>
                                    <td>@item.Quantity</td>





                                </tr>
}
                            <tr>
                                <td><div class="text-primary btn btn-danger">Total</div></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td><span class="btn btn-danger">@Model.AfterAdjustment</span> </td>
                            </tr>
                        </tbody>
                    </table>
}
            </div><!-- table-responsive -->

        <!-- table-responsive -->

        

  


    </div><!-- panel-body -->
</div>



@section scripts
{
    <script type="text/javascript">

        $('#liDaily').addClass('active');
    </script>
    
    }
















