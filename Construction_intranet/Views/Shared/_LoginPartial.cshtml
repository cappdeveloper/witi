<ul class="headermenu">
    @if (Construction_intranet.Concrete_Classes.SessionManager.RoleId!=null)
    {
        <li>
            <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    <img src="/content/images/photos/loggeduser.png" alt="" />
                    @Construction_intranet.Concrete_Classes.SessionManager.UserName
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu dropdown-menu-usermenu pull-right">
                     @*<li><a href="#"><i class="glyphicon glyphicon-cog"></i>Account Settings</a></li>*@
                    <li>
                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <a href="javascript:document.getElementById('logoutForm').submit()" style="text-decoration: none;"><i class="glyphicon glyphicon-log-out"></i>Log Out</a>
                        }
                    </li>
                </ul>
            </div>
        </li>
    }
    else
    {
                           
        <li>
            <div style="margin-top: 10px; margin-right: 10px; margin-left: 10px;">
                <a href="/Account/Login"><i class="glyphicon glyphicon-user "></i>Sign In</a>
            </div>

        </li>
    }

</ul>
